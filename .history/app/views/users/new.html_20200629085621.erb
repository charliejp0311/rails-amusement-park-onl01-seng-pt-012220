<%= form_for :user do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :height %>
    <%= f.text_field :height %>
    <%= f.label :tickets %>
    <%= f.text_field :tickets %>
    </div><br/>
    <div>
    <%= f.label :nausea %>
    <%= f.text_field :nausea %>
    <%= f.label :happiness %>
    <%= f.text_field :happiness %>
    </div><br/>
    <div>
    <%= f.label :password %>
    <%= f.text_field :password %><br />
    <%= f.label :password_confirmation %>
    <%= f.text_field :password_confirmation %><br />
    </div><br/>
    <%= f.submit 'Create user' %><br />
<% end %>