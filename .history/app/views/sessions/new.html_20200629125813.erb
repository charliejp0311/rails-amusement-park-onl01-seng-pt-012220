<%= form_tag @user, url: '/signin' do %>
  <p>User: <%= collection_select :user, :name, User.all, :id, :name %></p><br/>
  <%if !!@user %>
  <%byebug%>
    <% if @user.admin %>
        <p>Password: <%= text_field_tag :password %></p>
    <%end%>
  <%end%>
  <%= submit_tag "Submit" %>
<% end %>